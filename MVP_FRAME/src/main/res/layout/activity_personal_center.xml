<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/share_it_background"
    android:layout_height="match_parent"
    android:orientation="vertical">
<!--个人中心-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary">
        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:src="@drawable/personal_back_img"
            android:padding="3dp"
            android:layout_margin="3dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="@color/baise"
            android:text="个人中心"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>
<LinearLayout
    android:id="@+id/login"
    android:background="@color/baise"
    android:layout_width="0dp"
    android:layout_height="0dp"
    app:layout_heightPercent="15%"
    app:layout_widthPercent="94%"
    app:layout_marginLeftPercent="3%"
    app:layout_marginTopPercent="3%"
    android:orientation="horizontal">
    <ImageView
        android:padding="7dp"
        android:layout_marginLeft="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:src="@drawable/personal_login_head"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      android:layout_gravity="center_vertical"
        android:text="点击登录"
        android:layout_marginLeft="15dp"/>
</LinearLayout>
    <RelativeLayout
        android:id="@+id/hostory"
        app:layout_widthPercent="94%"
        app:layout_heightPercent="12%"
        app:layout_marginLeftPercent="3%"
        app:layout_marginTopPercent="1.5%"
        android:layout_width="0dp"
        android:layout_height="0dp"
       android:gravity="center_vertical"
        android:background="@color/baise">
        <ImageView
            android:padding="7dp"
            android:layout_marginLeft="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/personal_history_img"
            android:id="@+id/imageView" />
        <TextView
            android:id="@+id/textt"
            android:padding="11dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="观看历史"
            android:layout_toEndOf="@+id/imageView"
            />
        <ImageView
            android:padding="7dp"
            android:layout_marginLeft="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/personal_enter_img"
            android:layout_alignTop="@+id/textt"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/shoucang"
        app:layout_widthPercent="94%"
        app:layout_heightPercent="12%"
        app:layout_marginLeftPercent="3%"
        app:layout_marginTopPercent="1.5%"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:background="@color/baise">
        <ImageView
            android:padding="7dp"
            android:layout_marginLeft="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/personal_shoucang_img"
            android:id="@+id/imageView1" />
        <TextView
            android:id="@+id/textt1"
            android:padding="11dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的收藏"
            android:layout_toEndOf="@+id/imageView1"
            />
        <ImageView
            android:padding="7dp"
            android:layout_marginLeft="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/personal_enter_img"
            android:layout_alignTop="@+id/textt1"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/set"
        app:layout_widthPercent="94%"
        app:layout_heightPercent="12%"
        app:layout_marginLeftPercent="3%"
        app:layout_marginTopPercent="1.5%"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:background="@color/baise">
        <ImageView
            android:padding="7dp"
            android:layout_marginLeft="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/personal_set_img"
            android:id="@+id/imageView2" />
        <TextView
            android:id="@+id/textt2"
            android:padding="11dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置"
            android:layout_toEndOf="@+id/imageView2"
            />
        <ImageView
            android:padding="7dp"
            android:layout_marginLeft="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/personal_enter_img"
            android:layout_alignTop="@+id/textt2"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp" />
    </RelativeLayout>
</com.zhy.android.percent.support.PercentLinearLayout>
