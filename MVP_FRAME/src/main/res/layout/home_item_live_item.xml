<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="140dp"
        android:layout_height="100dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">

        <ImageView
            android:id="@+id/Home_item_liveshow_Image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="fitXY"
            android:layout_marginLeft="5dp"
            android:src="@mipmap/ic_launcher"
            app:layout_heightPercent="100%"
            app:layout_widthPercent="100%" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentBottom="true"
            android:src="@drawable/lpanda_bottom_gra"
            app:layout_heightPercent="25%"
            android:layout_marginLeft="5dp"
            app:layout_widthPercent="50%" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/home_hot_live_icon"
            app:layout_heightPercent="10%"
            app:layout_widthPercent="10%" />

        <TextView
            android:id="@+id/Home_item_liveshow_Live"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="25dp"
            android:layout_marginBottom="3dp"
            android:text="Live"
            android:textSize="16sp"
            android:gravity="center|left"
            android:textColor="#fff"
            app:layout_heightPercent="20%"
            app:layout_widthPercent="29%" />


    </com.zhy.android.percent.support.PercentRelativeLayout>

    <TextView
        android:id="@+id/Home_item_liveshow_body"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:text="成都基地高清精切线路"
        android:textSize="18sp"
        app:layout_heightPercent="10%"
        app:layout_widthPercent="100%" />


</com.zhy.android.percent.support.PercentLinearLayout>