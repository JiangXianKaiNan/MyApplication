<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_margin="3dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/item_img"
            android:scaleType="fitXY"
            android:layout_width="129dp"
            android:layout_height="60dp" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/lpanda_bottom_gra"
            android:layout_above="@+id/item_text"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/imageView2" />
        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/lpanda_live_layer"
            android:layout_above="@+id/item_text"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/imageView" />
        <TextView
            android:gravity="center"
            android:textSize="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Live"
            android:textColor="#ffffff"
            android:layout_alignTop="@+id/imageView2"
            android:layout_toRightOf="@+id/imageView"
            android:layout_toEndOf="@+id/imageView"
            android:layout_marginLeft="1dp"
            android:layout_marginStart="5dp"
            android:layout_above="@+id/item_text" />
        <TextView
            android:id="@+id/item_text"
            android:layout_width="140dp"
            android:layout_height="33dp"
            android:layout_below="@+id/item_img"
            android:layout_marginTop="8dp"
            android:text="城城城城城城城城城城城城城城城城城城城城城城城城"

            android:textColor="#000000"
            android:layout_alignRight="@+id/item_img"
            android:layout_alignEnd="@+id/item_img" />

        <TextView
            android:id="@+id/kghfughs"
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_below="@+id/item_text"
            android:layout_marginTop="10dp"
            android:background="#e6e6e6" />
</RelativeLayout>
</RelativeLayout>
