<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!--<fm.jiecao.jcvideoplayer_lib.JCVideoPlayer-->
        <!--android:id="@+id/videocontroller1"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="200dp" />-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <io.vov.vitamio.widget.VideoView
            android:id="@+id/lc_videoview"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            app:layout_heightPercent="100%"
            app:layout_widthPercent="100%" />
        <ImageView
            android:id="@+id/lc_fi_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/_no_img"
            android:scaleType="centerCrop"/>
        <ImageView
            android:id="@+id/lc_fi_bo"
            android:layout_centerInParent="true"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/lpanda_pause"/>
    </RelativeLayout>

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/white"
        app:layout_heightPercent="15%"
        app:layout_widthPercent="100%">

        <TextView
            android:id="@+id/livechina_item_titles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="[正在直播]成都基地高清精切线路"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/livechina_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="简介"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/livechina_item_titles"
            android:layout_alignStart="@+id/livechina_item_titles" />

        <CheckBox

            android:id="@+id/live_checkbox"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/pandalive_checkbox_selector"
            android:button="@null"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

    </com.zhy.android.percent.support.PercentRelativeLayout>

    <com.zhy.android.percent.support.PercentLinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical">
         <TextView
             android:visibility="gone"
             android:background="@color/white"
             android:id="@+id/livechina_item_body"
             android:layout_marginBottom="1dp"
             android:layout_marginTop="3dp"
             android:textSize="14dp"
             android:padding="15dp"
             android:textColor="@color/black"
             android:text="翻身、吃饭、睡觉、喝奶、打闹、攀爬……这里是成都大熊猫繁育研究基地，24小时高清直播大熊猫生活实况的地方。成年园、幼儿园、母子园、一号别墅,11路直播信28个摄像头,让你零距离了解国宝们的日常起居."
             android:layout_width="match_parent"
             android:layout_height="wrap_content" />
     </com.zhy.android.percent.support.PercentLinearLayout>
</com.zhy.android.percent.support.PercentLinearLayout>