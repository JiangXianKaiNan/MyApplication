<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_marginTop="2dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="2dp"
        android:background="@color/White"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">
        <TextView
            android:id="@+id/Home_item_Rolling_bodytime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:text="2017-7-19"
            android:textSize="12dp"
            android:layout_alignBottom="@+id/home_item_Rolling_image"
            android:layout_alignLeft="@+id/linearLayout"
            android:layout_alignStart="@+id/linearLayout" />
        <ImageView
            android:scaleType="centerCrop"
            android:layout_margin="7dp"
            android:id="@+id/home_item_Rolling_image"
            android:layout_width="130dp"
            android:layout_height="80dp"
            android:src="@drawable/ceshi"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <ImageView
            android:id="@+id/home_play_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/lpanda_bottom_gra"
            android:layout_alignBottom="@+id/home_item_Rolling_image"
            android:layout_alignLeft="@+id/home_item_Rolling_image"
             />

        <ImageView
            android:scaleType="centerInside"
            android:layout_marginLeft="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/home_play_icon"
            android:layout_alignBottom="@+id/home_play_icon"
            android:layout_alignLeft="@+id/home_play_icon"
            android:layout_alignTop="@+id/home_play_icon"
            android:id="@+id/imageView3" />

        <TextView
            android:gravity="center"
            android:textSize="11dp"
            android:layout_marginLeft="3dp"
            android:id="@+id/Home_item_Rolling_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:35"
            android:layout_alignBottom="@+id/home_play_icon"
            android:textColor="@color/White"
            android:layout_toRightOf="@+id/imageView3"
            android:layout_toEndOf="@+id/imageView3"
            android:layout_alignTop="@+id/home_play_icon" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/home_item_Rolling_image"
            android:layout_toRightOf="@+id/home_item_Rolling_image"
            android:orientation="vertical"
            android:id="@+id/linearLayout">

            <TextView
                android:textColor="@color/black"
                android:id="@+id/Home_item_Rolling_body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="《熊猫TOP榜》 有这样的奶爸妈妈，欢乐一夏"
                android:textSize="15sp"
                 />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
