<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_widthPercent="50%"
        app:layout_heightPercent="20%">


        <ImageView
            android:id="@+id/Home_item_Amazing_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="5dp"
            app:layout_heightPercent="100%"
            app:layout_widthPercent="100%"
            android:src="@mipmap/ic_launcher" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="80dp"
            android:src="@drawable/lpanda_bottom_gra" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="83dp"
            android:src="@drawable/home_play_icon" />

        <TextView
            android:id="@+id/Home_item_Amazing_timeLength"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="80dp"
            android:text="00:35"
            android:textColor="#fff" />

    </com.zhy.android.percent.support.PercentRelativeLayout>

    <TextView
        android:id="@+id/Home_item_Amazing_Title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="8%"
        app:layout_widthPercent="50%"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        android:textSize="16sp"
        android:text="你们的“小灰灰”被打倒变形"/>

    <TextView
        android:id="@+id/Home_item_Amazing_bodytime"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="5%"
        app:layout_widthPercent="50%"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:text="2017-07-14" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="#FFDCDADA" />

</com.zhy.android.percent.support.PercentLinearLayout>